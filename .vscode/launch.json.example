{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Flutter: Debug (Local)",
            "request": "launch",
            "type": "dart",
            "program": "lib/main_debug.dart",
            "cwd": "${workspaceFolder}/peppercheck_flutter",
            "args": [
                // For Android Emulator (10.0.2.2) or iOS Simulator (127.0.0.1)
                "--dart-define=SUPABASE_URL=http://10.0.2.2:54321",
                "--dart-define=SUPABASE_ANON_KEY=YOUR_LOCAL_ANON_KEY"
            ]
        },
        {
            "name": "Flutter: Staging (Debug)",
            "request": "launch",
            "type": "dart",
            "program": "lib/main_staging.dart",
            "cwd": "${workspaceFolder}/peppercheck_flutter",
            "flutterMode": "debug"
        },
        {
            "name": "Flutter: Staging (Release)",
            "request": "launch",
            "type": "dart",
            "program": "lib/main_staging.dart",
            "cwd": "${workspaceFolder}/peppercheck_flutter",
            "flutterMode": "release"
        },
        {
            "name": "Flutter: Production",
            "request": "launch",
            "type": "dart",
            "program": "lib/main_production.dart",
            "cwd": "${workspaceFolder}/peppercheck_flutter",
            "flutterMode": "release"
        }
    ]
}
